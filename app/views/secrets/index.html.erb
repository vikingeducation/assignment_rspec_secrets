<h1>Listing secrets</h1>

<table id="spec_secrets_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @secrets.each do |secret| %>
      <tr>
        <td><%= secret.title %></td>
        <td><%= secret.body %></td>
        <% if signed_in_user? %>
          <td><%= secret.author.name %></td>
        <% else %>
          <td>**hidden**</td>
        <% end %>
        <td><%= link_to 'Show', secret %></td>
        <% if secret.author == current_user %>
          <td><%= link_to 'Edit', edit_secret_path(secret) %></td>
          <td><%= link_to 'Destroy', secret, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

