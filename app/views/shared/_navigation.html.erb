<ul>
  <li><%= link_to "All Users", users_path %></li>
  <li><%= link_to "All Secrets", secrets_path %></li>
  <% if signed_in_user? %>
    <li>
      Welcome, <%= link_to current_user.name, current_user %>!
    </li>
    <li>
      <%= link_to "Logout", session_path, :method => :delete %>
    </li>
  <% else %>
    <li>
      <%= link_to "Login", new_session_path %>
    </li>
  <% end %>
</ul>